<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15sp">

    <ImageView
        android:id="@+id/playlist_item_imageview"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:src="@drawable/rounded_button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlist_item_title"
        android:layout_width="246dp"
        android:layout_height="31dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_item_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playlist_item_imageview"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/playlist_item_uploader"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/playlist_uploader_const"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/playlist_item_title"
        app:layout_constraintTop_toBottomOf="@+id/playlist_item_title" />

</androidx.constraintlayout.widget.ConstraintLayout>